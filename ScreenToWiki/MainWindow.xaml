<Window x:Class="ScreenToWiki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScreenToWiki" Height="350" Width="525"
        Top="0" Left="0" WindowStyle="None" Topmost="True"
        AllowsTransparency="True" Background="#01FFFFFF"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        >
    <!-- HACK: #01FFFFFF: a truely "Transparent" window can't grab MouseLeftButtonDown -->
    <Canvas>
        <Rectangle Name="rectangle" Fill="#44990000" Stroke="Red">
        </Rectangle>
    </Canvas>
</Window>
